---
layout: layouts/base.njk
---
<article class="post">
  <header class="post-header">
    <h1 class="post-title">{{ title }}</h1>
    <p class="post-author">
      {{ metadata.author.name }}
    </p>
    <p class="post-date">{{ date | dateFormat }}</p>
    <div class="post-reading-time">
      {% include "partials/reading-time.njk" %}
    </div>
      <div class="post-tags">
        {% if tags %}
        <p>üè∑Ô∏è&nbsp;
          {%- for tag in tags | filterTagList -%}
            <a href="/tags/{{ tag | slugify }}/">{{ tag }}</a>{% if not loop.last %}, {% endif %}
          {%- endfor -%}
        </p>
      </div>
    {% endif %}
  </header>
  <div class="post-content">
    {{ content | safe }}
  </div>
{%- if collections.post %}
{%- set previousPost = collections.post | getPreviousCollectionItem %}
{%- set nextPost = collections.post | getNextCollectionItem %}
{%- if nextPost or previousPost %}
<ul class="links-nextprev">
  {%- if previousPost %}<li class="links-nextprev-prev">&larr; Previous<br> <a href="{{ previousPost.url }}">{{ previousPost.data.title }}</a></li>{% endif %}
	{%- if nextPost %}<li class="links-nextprev-next">Next &rarr;<br><a href="{{ nextPost.url }}">{{ nextPost.data.title }}</a></li>{% endif %}
</ul>
{%- endif %}
{%- endif %}
</article>
